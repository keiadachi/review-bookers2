<div class="container">
  <div class="row">
    <div class="col-md-2 pt-3">

    <%= render 'users/info', user: @user %>
    <%= render 'books/newbook', book: @book %>
    </div>

    <div class='col-md-9 offset-1 pt-3'>
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
    　　      <tr>
    　         <td><%= link_to user_path(book.user) do %>
                <% end %>
              <td><%= link_to book_path(book.id) do %>
                <%= book.title %> </td>
              <% end %>
              <td> <%= book.opinion %> </td>
    　　      </tr>
    　　    <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>