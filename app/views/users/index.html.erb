<div class="container">
  <div class="row">

    <div class="col-md-2 pt-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class='col-md-9 offset-1 pt-3'>
      <h2>Book</h2>
        <table class ="table">
          <thead>
            <th>image</th>
            <th>name</th>
            <th></th>
          </thead>
          <tbody>
          <% @users.each do |users| %>
            <tr>
              <td><%= attachment_image_tag(users, :image, :fill, 50, 50, fallback: "noimage.jpg") %></td>
              <td><%= users.name %></td>
              <td><%= link_to "Show",user_path(users) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>
