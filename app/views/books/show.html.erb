<div class="container">
  <div class="row">
    <div class="col-md-2 pt-3">

    <%= render 'users/info', user: @user %>
    <%= render 'books/newbook', book: @book %>
    </div>

    <div class='col-md-9 offset-1 pt-3'>
      <h2>Book detail</h2>
        <table class ="table">
          <tr>
            <td> <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag(@book.user, :image, :fill, 100, 100, fallback: "noimage.jpg") %><br>
              <%= @book.user.name %></td>
              <% end %>
            <td><%= @book.title %></td>
            <td><%= @book.opinion %></td>
            <td><%= link_to 'Edit', edit_book_path(@book) %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete  %></td>
          </tr>
        </table>


    </div>







  </div>
</div>