<div class="container">
  <div class="row">

    <div class="col-md-2 pt-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

    <div class='col-md-9 offset-1 pt-3'>
      <h2>Book</h2>
        <table class ="table">
          <thead>
            <th></th>
            <th>Tilte</th>
            <th>Opinion</th>
          </thead>
          <tbody>
          <% @books.each do |books| %>
            <tr>
              <td><%= attachment_image_tag(books.user, :image, :fill, 100, 100, fallback: "noimage.jpg") %></td>
              <td> <%= link_to book_path(books) do %>
                <%= books.title %></td>
                <% end %>
              <td><%= books.opinion %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>
